---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import type { Project } from "@/types/experience";

interface Props extends Project {}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { img, tags } = Astro.props;
---

<>
    <img
        alt={img.alt}
        class="rounded-xl object-cover w-full max-w-full h-auto transition duration-500"
        loading="lazy"
        src={img.src}
    />
    <p>{t("main.workExperience.technologies")}</p>
    <ul class="flex flex-wrap mb-2 gap-2">
        {
            tags.map((tag) => (
                <li>
                    <span
                        class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                        <tag.icon class="size-4" />
                        {tag.name}
                    </span>
                </li>
            ))
        }
    </ul>
</>
